############################
### Rails (server/) ignores
############################

# Bundler
/server/.bundle

# Logs, temp, cache, pid, sockets
/server/log/*
/server/tmp/*
!/server/log/.keep
!/server/tmp/.keep
/server/tmp/pids/*
/server/tmp/cache/*
/server/tmp/sockets/*

# ActiveStorage files
/server/storage/*
!/server/storage/.keep

# Master key & credentials
/server/config/master.key
/server/config/credentials/*.key

# Coverage & test artifacts
/server/coverage/
/server/spec/examples.txt

# Database (SQLite dev/test)
/server/db/*.sqlite3
/server/db/*.sqlite3-journal

# Redis dump
/server/dump.rdb

# Byebug history
/server/.byebug_history

# Public assets (Webpacker/Sprockets)
/server/public/packs
/server/public/packs-test
/server/public/assets


